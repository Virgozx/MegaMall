@model MegaMall.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Đăng nhập";
}

<div class="row justify-content-center mt-5">
    <div class="col-md-5">
        <div class="card shadow-sm border-0">
            <div class="card-body p-4">
                <h2 class="text-center mb-4 fw-bold">Đăng nhập</h2>
                <form id="account" method="post">
                    <div asp-validation-summary="All" class="text-danger small mb-3"></div>
                    <div class="form-floating mb-3">
                        <input asp-for="Email" class="form-control" placeholder="name@example.com" />
                        <label asp-for="Email">Email</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating mb-3">
                        <input asp-for="Password" class="form-control" placeholder="Mật khẩu" />
                        <label asp-for="Password">Mật khẩu</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-check mb-3">
                        <input asp-for="RememberMe" class="form-check-input" />
                        <label asp-for="RememberMe" class="form-check-label">Ghi nhớ đăng nhập</label>
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-warning btn-lg fw-bold text-white">Đăng nhập</button>
                    </div>
                    
                    <div class="text-center my-3 text-muted">
                        <small>hoặc</small>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-outline-danger btn-lg d-flex align-items-center justify-content-center gap-2" onclick="showOtpLogin()">
                            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24">
                                <path fill="#EA4335" d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.887.732-1.636 1.636-1.636h.343l10.021 7.515 10.021-7.515h.343c.904 0 1.636.749 1.636 1.636z"/>
                            </svg>
                            <span>Đăng nhập bằng Gmail</span>
                        </button>
                    </div>
                    
                    <div class="text-center mt-3">
                        <p>Chưa có tài khoản? <a asp-action="Register" class="text-decoration-none fw-bold text-warning">Đăng ký ngay</a></p>
                    </div>
                </form>
            </div>
        </div>

        <!-- OTP Login Card (Hidden by default) -->
        <div class="card shadow-sm border-0 mt-3" id="otpLoginCard" style="display: none;">
            <div class="card-body p-4">
                <h3 class="text-center mb-3 fw-bold">
                    <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" class="me-2">
                        <path fill="#EA4335" d="M24 5.457v13.909c0 .904-.732 1.636-1.636 1.636h-3.819V11.73L12 16.64l-6.545-4.91v9.273H1.636A1.636 1.636 0 0 1 0 19.366V5.457c0-.887.732-1.636 1.636-1.636h.343l10.021 7.515 10.021-7.515h.343c.904 0 1.636.749 1.636 1.636z"/>
                    </svg>
                    Đăng nhập Gmail
                </h3>
                
                <div id="otpStatus" class="alert d-none" role="alert"></div>
                
                <div class="form-floating mb-3">
                    <input type="email" class="form-control" id="otpEmail" placeholder="name@example.com" />
                    <label>Email</label>
                </div>
                
                <div class="d-grid gap-2 mb-3">
                    <button type="button" class="btn btn-warning text-white" id="sendOtpBtn" onclick="sendOtp()">
                        <span id="sendOtpText">Gửi mã OTP</span>
                        <span id="sendOtpSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                    </button>
                </div>
                
                <div id="otpInputSection" style="display: none;">
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" id="otpCode" placeholder="123456" maxlength="6" />
                        <label>Mã OTP (6 số)</label>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <button type="button" class="btn btn-success" id="verifyOtpBtn" onclick="verifyOtp()">
                            <span id="verifyOtpText">Xác nhận OTP</span>
                            <span id="verifyOtpSpinner" class="spinner-border spinner-border-sm d-none" role="status"></span>
                        </button>
                    </div>
                </div>
                
                <div class="text-center mt-3">
                    <button type="button" class="btn btn-link text-muted" onclick="hideOtpLogin()">
                        Quay lại đăng nhập thường
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function showOtpLogin() {
        document.getElementById('otpLoginCard').style.display = 'block';
        document.getElementById('otpEmail').focus();
    }

    function hideOtpLogin() {
        document.getElementById('otpLoginCard').style.display = 'none';
        document.getElementById('otpInputSection').style.display = 'none';
        document.getElementById('otpEmail').value = '';
        document.getElementById('otpCode').value = '';
        hideOtpStatus();
    }

    function showOtpStatus(message, isError = false) {
        const status = document.getElementById('otpStatus');
        status.className = isError ? 'alert alert-danger' : 'alert alert-success';
        status.textContent = message;
        status.classList.remove('d-none');
    }

    function hideOtpStatus() {
        document.getElementById('otpStatus').classList.add('d-none');
    }

    async function sendOtp() {
        const email = document.getElementById('otpEmail').value.trim();
        if (!email) {
            showOtpStatus('Vui lòng nhập email', true);
            return;
        }

        const sendBtn = document.getElementById('sendOtpBtn');
        const sendText = document.getElementById('sendOtpText');
        const sendSpinner = document.getElementById('sendOtpSpinner');
        
        sendBtn.disabled = true;
        sendText.classList.add('d-none');
        sendSpinner.classList.remove('d-none');
        hideOtpStatus();

        try {
            const response = await fetch('/Account/SendOtp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email: email })
            });

            const data = await response.json();
            
            if (data.success) {
                showOtpStatus(data.message, false);
                document.getElementById('otpInputSection').style.display = 'block';
                document.getElementById('otpCode').focus();
            } else {
                showOtpStatus(data.message, true);
            }
        } catch (error) {
            showOtpStatus('Lỗi kết nối. Vui lòng thử lại', true);
        } finally {
            sendBtn.disabled = false;
            sendText.classList.remove('d-none');
            sendSpinner.classList.add('d-none');
        }
    }

    async function verifyOtp() {
        const email = document.getElementById('otpEmail').value.trim();
        const otp = document.getElementById('otpCode').value.trim();
        
        if (!otp || otp.length !== 6) {
            showOtpStatus('Vui lòng nhập mã OTP 6 số', true);
            return;
        }

        const verifyBtn = document.getElementById('verifyOtpBtn');
        const verifyText = document.getElementById('verifyOtpText');
        const verifySpinner = document.getElementById('verifyOtpSpinner');
        
        verifyBtn.disabled = true;
        verifyText.classList.add('d-none');
        verifySpinner.classList.remove('d-none');
        hideOtpStatus();

        try {
            const response = await fetch('/Account/VerifyOtp', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ email: email, otp: otp })
            });

            const data = await response.json();
            
            if (data.success) {
                showOtpStatus(data.message + ' - Đang chuyển hướng...', false);
                setTimeout(() => {
                    window.location.href = '/';
                }, 1500);
            } else {
                showOtpStatus(data.message, true);
            }
        } catch (error) {
            showOtpStatus('Lỗi kết nối. Vui lòng thử lại', true);
        } finally {
            verifyBtn.disabled = false;
            verifyText.classList.remove('d-none');
            verifySpinner.classList.add('d-none');
        }
    }

    // Allow Enter key to submit
    document.addEventListener('DOMContentLoaded', function() {
        document.getElementById('otpEmail')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') sendOtp();
        });
        
        document.getElementById('otpCode')?.addEventListener('keypress', function(e) {
            if (e.key === 'Enter') verifyOtp();
        });
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
