@model IEnumerable<MegaMall.Domain.Entities.Order>

@{
    ViewData["Title"] = "Đơn hàng của tôi";
}

<div class="container mt-4">
    <h2>Đơn hàng của tôi</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>#@item.Id</td>
                    <td>@item.OrderDate.ToString("g")</td>
                    <td>@item.TotalAmount.ToString("N0") đ</td>
                    <td>
                        <span class="badge bg-info text-dark">@item.Status</span>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Chi tiết</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
