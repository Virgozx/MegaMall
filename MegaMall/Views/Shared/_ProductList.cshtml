@model IEnumerable<MegaMall.Domain.Entities.Product>

<div id="product-list-container">
    <input type="hidden" id="hidden-current-page" value="@ViewBag.CurrentPage" />
    <input type="hidden" id="hidden-total-pages" value="@ViewBag.TotalPages" />
    <input type="hidden" id="hidden-sort-by" value="@ViewBag.SortBy" />

    <div class="row row-cols-2 row-cols-md-4 row-cols-lg-5 g-3">
        @if (!Model.Any())
        {
            <div class="col-12 text-center py-5 bg-white rounded">
                <img src="https://static.chotot.com/storage/empty_state/desktop/no_result.png" alt="No result" width="200">
                <h5 class="mt-3">Không tìm thấy kết quả nào.</h5>
                <p class="text-muted">Hãy thử tìm với từ khóa khác.</p>
            </div>
        }
        else
        {
            foreach (var product in Model)
            {
                var minPrice = product.Variants.Any() ? product.Variants.Min(v => v.Price) : 0;
                var maxPrice = product.Variants.Any() ? product.Variants.Max(v => v.Price) : 0;
                var priceDisplay = minPrice == maxPrice ? minPrice.ToString("N0") + " đ" : $"{minPrice:N0} đ";
                var totalStock = product.Variants.Sum(v => v.StockQuantity);
                var isOutOfStock = totalStock == 0;

                <div class="col">
                    <div class="card h-100 product-card @(isOutOfStock ? "out-of-stock" : "")">
                        <div class="product-img-wrapper position-relative">
                            @if (product.Images != null && product.Images.Any())
                            {
                                <img src="@product.Images.First().ImageUrl" alt="@product.Name">
                            }
                            else
                            {
                                <img src="https://placehold.co/300x300?text=No+Image" alt="@product.Name">
                            }
                            
                            <!-- Out of Stock Badge -->
                            @if (isOutOfStock)
                            {
                                <div class="position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center" style="background: rgba(0,0,0,0.6);">
                                    <span class="badge bg-danger fs-6">
                                        <i class="bi bi-x-circle"></i> HẾT HÀNG
                                    </span>
                                </div>
                            }
                            
                            <!-- Wishlist Button -->
                            @if (User.Identity?.IsAuthenticated == true && !isOutOfStock)
                            {
                                <button class="btn-wishlist" data-product-id="@product.Id" title="Thêm vào yêu thích">
                                    <i class="bi bi-heart"></i>
                                </button>
                            }
                        </div>
                        
                        <div class="card-body product-info d-flex flex-column">
                            <h6 class="card-title text-truncate mb-1" title="@product.Name">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                    @product.Name
                                </a>
                            </h6>
                            <div class="product-price mb-1">@priceDisplay</div>
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <small class="product-time"><i class="bi bi-clock"></i> Vừa xong</small>
                                <small class="product-time"><i class="bi bi-geo-alt"></i> TQ</small>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>

    <!-- Pagination -->
    @if (ViewBag.TotalPages > 1)
    {
        <nav aria-label="Page navigation" class="mt-4">
            <ul class="pagination justify-content-center">
                @for (int i = 1; i <= ViewBag.TotalPages; i++)
                {
                    <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                        <button type="button" class="page-link" onclick="changePage(@i)">@i</button>
                    </li>
                }
            </ul>
        </nav>
    }
</div>
