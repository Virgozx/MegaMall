@{
    Layout = null;
    var amount = ViewBag.Amount;
    var orderId = ViewBag.OrderId;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cổng thanh toán giả lập VNPay</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <style>
        body {
            background-color: #f8f9fa;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }
        .payment-container {
            max-width: 800px;
            margin: 50px auto;
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            overflow: hidden;
        }
        .header {
            background: linear-gradient(to right, #005cbf, #007bff);
            color: white;
            padding: 20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .logo {
            font-weight: bold;
            font-size: 24px;
        }
        .content {
            padding: 30px;
        }
        .qr-section {
            text-align: center;
            border-right: 1px solid #dee2e6;
        }
        .info-section {
            padding-left: 30px;
        }
        .amount-display {
            color: #005cbf;
            font-size: 28px;
            font-weight: bold;
        }
        .timer {
            color: #dc3545;
            font-weight: bold;
        }
        .footer {
            background-color: #f8f9fa;
            padding: 15px;
            text-align: center;
            border-top: 1px solid #dee2e6;
            font-size: 12px;
            color: #6c757d;
        }
        @media (max-width: 768px) {
            .qr-section {
                border-right: none;
                border-bottom: 1px solid #dee2e6;
                padding-bottom: 20px;
                margin-bottom: 20px;
            }
            .info-section {
                padding-left: 0;
            }
        }
    </style>
</head>
<body>

    <div class="payment-container">
        <div class="header">
            <div class="logo">
                <i class="bi bi-wallet2"></i> VNPAY <span style="font-size: 14px; opacity: 0.8; font-weight: normal;">Sandbox</span>
            </div>
            <div>
                Đơn hàng: #@orderId
            </div>
        </div>
        
        <div class="content">
            <div class="row">
                <div class="col-md-5 qr-section">
                    <h5 class="mb-3">Quét mã để thanh toán</h5>
                    <div class="bg-light p-3 d-inline-block rounded border">
                        <!-- Simulated QR Code using an API or simple placeholder -->
                        <img src="https://api.qrserver.com/v1/create-qr-code/?size=200x200&data=PAY_ORDER_@orderId" alt="QR Code" class="img-fluid">
                    </div>
                    <p class="mt-3 text-muted small">
                        Sử dụng App Ngân hàng hoặc Ví VNPAY<br>để quét mã
                    </p>
                    <div class="timer mt-2">
                        <i class="bi bi-clock"></i> Thời gian còn lại: <span id="countdown">15:00</span>
                    </div>
                </div>
                
                <div class="col-md-7 info-section">
                    <h4 class="mb-4 text-secondary">Thông tin thanh toán</h4>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Nhà cung cấp</label>
                        <div class="fw-bold">MegaMall Store</div>
                    </div>
                    
                    <div class="mb-3">
                        <label class="text-muted small">Nội dung chuyển khoản</label>
                        <div class="fw-bold text-danger">MGM ORDER @orderId</div>
                    </div>
                    
                    <div class="mb-4">
                        <label class="text-muted small">Số tiền thanh toán</label>
                        <div class="amount-display">@(((decimal)amount).ToString("N0")) VND</div>
                    </div>
                    
                    <div class="alert alert-warning small">
                        <i class="bi bi-exclamation-triangle-fill"></i> Đây là môi trường Demo. Bạn có thể chọn kết quả giao dịch bên dưới.
                    </div>
                    
                    <div class="d-grid gap-2">
                        <form asp-action="PaymentMockConfirm" asp-controller="Cart" method="post">
                            <input type="hidden" name="orderId" value="@orderId" />
                            <input type="hidden" name="success" value="true" />
                            <button type="submit" class="btn btn-primary btn-lg w-100 mb-2">
                                <i class="bi bi-check-circle"></i> Xác nhận Thanh toán thành công
                            </button>
                        </form>
                        
                         <form asp-action="PaymentMockConfirm" asp-controller="Cart" method="post">
                            <input type="hidden" name="orderId" value="@orderId" />
                            <input type="hidden" name="success" value="false" />
                            <button type="submit" class="btn btn-outline-secondary w-100">
                                <i class="bi bi-x-circle"></i> Hủy giao dịch
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="footer">
            Bản quyền &copy; VNPAY 2026. Một sản phẩm của VNPAY.
        </div>
    </div>

    <script>
        // Simple countdown timer
        var timeLeft = 15 * 60; // 15 minutes
        var timerId = setInterval(countdown, 1000);

        function countdown() {
            if (timeLeft == -1) {
                clearTimeout(timerId);
                alert("Hết thời gian thanh toán!");
            } else {
                var minutes = Math.floor(timeLeft / 60);
                var seconds = timeLeft % 60;
                
                if (seconds < 10) seconds = '0' + seconds;
                
                document.getElementById('countdown').innerHTML = minutes + ':' + seconds;
                timeLeft--;
            }
        }
    </script>
</body>
</html>