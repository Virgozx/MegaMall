@model IEnumerable<MegaMall.Domain.Entities.Product>

@{
    ViewData["Title"] = "So sánh sản phẩm";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>So sánh sản phẩm</h2>
        @if (Model.Any())
        {
            <a asp-action="Clear" class="btn btn-outline-danger">Xóa tất cả</a>
        }
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            Chưa có sản phẩm để so sánh. <a asp-controller="Home" asp-action="Index">Xem sản phẩm</a> để thêm vào so sánh.
        </div>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead>
                    <tr>
                        <th style="width: 20%;">Tính năng</th>
                        @foreach (var product in Model)
                        {
                            <th style="width: @(80 / Model.Count())%;">
                                <div class="position-relative">
                                    <a asp-action="Remove" asp-route-id="@product.Id" class="btn-close position-absolute top-0 end-0" aria-label="Close"></a>
                                    <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="text-decoration-none text-dark">
                                        @if (product.Images != null && product.Images.Any())
                                        {
                                            <img src="@product.Images.First().ImageUrl" class="img-fluid mb-2" style="max-height: 150px;" alt="@product.Name">
                                        }
                                        else
                                        {
                                            <img src="https://placehold.co/150x150?text=@product.Name" class="img-fluid mb-2" alt="@product.Name">
                                        }
                                        <h5>@product.Name</h5>
                                    </a>
                                </div>
                            </th>
                        }
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <th class="align-middle">Giá</th>
                        @foreach (var product in Model)
                        {
                            var minPrice = product.Variants.Any() ? product.Variants.Min(v => v.Price) : 0;
                            var maxPrice = product.Variants.Any() ? product.Variants.Max(v => v.Price) : 0;
                            var priceDisplay = minPrice == maxPrice ? minPrice.ToString("N0") + " đ" : $"{minPrice:N0} đ - {maxPrice:N0} đ";
                            <td class="align-middle text-danger fw-bold">@priceDisplay</td>
                        }
                    </tr>
                    <tr>
                        <th class="align-middle">Mô tả</th>
                        @foreach (var product in Model)
                        {
                            <td class="align-middle text-start"><small>@product.Description</small></td>
                        }
                    </tr>
                    <tr>
                        <th class="align-middle">Biến thể</th>
                        @foreach (var product in Model)
                        {
                            <td class="align-middle">
                                @foreach (var v in product.Variants)
                                {
                                    <span class="badge bg-secondary">@v.Sku</span>
                                }
                            </td>
                        }
                    </tr>
                    <tr>
                        <th class="align-middle">Thao tác</th>
                        @foreach (var product in Model)
                        {
                            <td class="align-middle">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@product.Id" class="btn btn-primary btn-sm">Xem chi tiết</a>
                            </td>
                        }
                    </tr>
                </tbody>
            </table>
        </div>
    }
</div>
