@model MegaMall.Domain.Entities.UserAddress
@{
    ViewData["Title"] = "Add Address";
    ViewData["ActivePage"] = "Addresses";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <h3>Add New Address</h3>
            <form asp-action="AddAddress" method="post">
                <div class="mb-3">
                    <label asp-for="AddressLine" class="form-label">Address Line</label>
                    <input asp-for="AddressLine" class="form-control" required />
                </div>
                <div class="mb-3">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" class="form-control" required />
                </div>
                <div class="mb-3 form-check">
                    <input asp-for="IsDefault" class="form-check-input" />
                    <label asp-for="IsDefault" class="form-check-label">Set as default</label>
                </div>
                <button type="submit" class="btn btn-primary">Save Address</button>
                <a asp-action="Addresses" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
