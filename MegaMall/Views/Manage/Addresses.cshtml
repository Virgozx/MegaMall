@model IEnumerable<MegaMall.Domain.Entities.UserAddress>
@{
    ViewData["Title"] = "Address Book";
    ViewData["ActivePage"] = "Addresses";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-md-3">
            <partial name="_ManageNav" />
        </div>
        <div class="col-md-9">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h3>Address Book</h3>
                <a asp-action="AddAddress" class="btn btn-success">Add New Address</a>
            </div>
            
            @if (!Model.Any())
            {
                <p>No additional addresses saved.</p>
            }
            else
            {
                <div class="list-group">
                    @foreach (var address in Model)
                    {
                        <div class="list-group-item d-flex justify-content-between align-items-center">
                            <div>
                                <h5 class="mb-1">@address.AddressLine, @address.City</h5>
                                @if (address.IsDefault)
                                {
                                    <span class="badge bg-primary">Default</span>
                                }
                            </div>
                            <form asp-action="DeleteAddress" method="post">
                                <input type="hidden" name="id" value="@address.Id" />
                                <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                            </form>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>
