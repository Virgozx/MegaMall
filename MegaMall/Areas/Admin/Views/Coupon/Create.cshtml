@model MegaMall.Domain.Entities.Coupon

@{
    ViewData["Title"] = "Tạo Voucher Mới";
}

<div class="container mt-4">
    <h2><i class="bi bi-ticket-perforated"></i> Tạo Voucher Mới</h2>
    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create">
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
                
                <div class="card">
                    <div class="card-header">
                        <h5>Thông Tin Voucher</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Code" class="form-label">Mã Voucher *</label>
                            <input asp-for="Code" class="form-control" placeholder="VD: FREESHIP100, GIAM10K" required />
                            <div class="form-text">Mã duy nhất để khách hàng nhập khi thanh toán</div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Mô Tả</label>
                            <textarea asp-for="Description" class="form-control" rows="2" placeholder="VD: Giảm 10% tối đa 100k cho đơn hàng từ 500k"></textarea>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Type" class="form-label">Loại Voucher *</label>
                            <select asp-for="Type" class="form-select" id="voucherType" required>
                                <option value="">-- Chọn loại voucher --</option>
                                <option value="0">Giảm Giá Cố Định (VD: Giảm 50.000đ)</option>
                                <option value="1">Giảm Theo Phần Trăm (VD: Giảm 10%)</option>
                                <option value="2">Miễn Phí Vận Chuyển</option>
                            </select>
                        </div>

                        <div class="mb-3" id="discountValueDiv">
                            <label asp-for="DiscountValue" class="form-label">Giá Trị Giảm *</label>
                            <input asp-for="DiscountValue" class="form-control" type="number" step="0.01" id="discountValue" />
                            <div class="form-text" id="discountValueHelp">Nhập số tiền cố định (VND) hoặc phần trăm (0-100)</div>
                        </div>

                        <div class="mb-3" id="maxDiscountDiv" style="display:none;">
                            <label asp-for="MaxDiscountAmount" class="form-label">Giảm Tối Đa (VND)</label>
                            <input asp-for="MaxDiscountAmount" class="form-control" type="number" placeholder="VD: 100000" />
                            <div class="form-text">Số tiền giảm tối đa khi dùng voucher giảm theo %</div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MinOrderAmount" class="form-label">Đơn Hàng Tối Thiểu (VND) *</label>
                                <input asp-for="MinOrderAmount" class="form-control" type="number" value="0" required />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label">Số Lượng *</label>
                                <input asp-for="Quantity" class="form-control" type="number" value="100" required />
                                <div class="form-text">Tổng số lần voucher có thể sử dụng</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaxUsagePerUser" class="form-label">Giới Hạn Mỗi Người</label>
                                <input asp-for="MaxUsagePerUser" class="form-control" type="number" value="1" />
                                <div class="form-text">Số lần tối đa 1 người dùng có thể sử dụng</div>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="StartDate" class="form-label">Ngày Bắt Đầu</label>
                                <input asp-for="StartDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="StartDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ExpiryDate" class="form-label">Ngày Hết Hạn *</label>
                            <input asp-for="ExpiryDate" class="form-control" type="datetime-local" required />
                            <span asp-validation-for="ExpiryDate" class="text-danger"></span>
                        </div>

                        <div class="mb-3 form-check">
                            <input asp-for="IsActive" class="form-check-input" checked />
                            <label asp-for="IsActive" class="form-check-label">Kích Hoạt Ngay</label>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success"><i class="bi bi-check-lg"></i> Tạo Voucher</button>
                    <a asp-action="Index" class="btn btn-secondary"><i class="bi bi-x-lg"></i> Hủy</a>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <div class="card bg-light">
                <div class="card-header">
                    <h6><i class="bi bi-info-circle"></i> Hướng Dẫn</h6>
                </div>
                <div class="card-body">
                    <p><strong>Các loại voucher:</strong></p>
                    <ul class="small">
                        <li><strong>Giảm Cố Định:</strong> Giảm số tiền VND cố định (VD: giảm 50.000đ)</li>
                        <li><strong>Giảm %:</strong> Giảm theo phần trăm với giới hạn tối đa (VD: giảm 10% tối đa 100k)</li>
                        <li><strong>Freeship:</strong> Miễn phí vận chuyển cho đơn hàng</li>
                    </ul>
                    <hr>
                    <p class="small"><strong>Lưu ý:</strong> Mã voucher phải là duy nhất và dễ nhớ. Khách hàng sẽ nhập mã này khi thanh toán.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.getElementById('voucherType').addEventListener('change', function() {
            var selectedType = this.value;
            var discountValueDiv = document.getElementById('discountValueDiv');
            var maxDiscountDiv = document.getElementById('maxDiscountDiv');
            var discountValueInput = document.getElementById('discountValue');
            var discountValueHelp = document.getElementById('discountValueHelp');

            if (selectedType === '') {
                discountValueDiv.style.display = 'none';
                maxDiscountDiv.style.display = 'none';
            } else if (selectedType === '0') { // FixedAmount
                discountValueDiv.style.display = 'block';
                maxDiscountDiv.style.display = 'none';
                discountValueInput.required = true;
                discountValueHelp.textContent = 'Nhập số tiền giảm cố định (VND). VD: 50000';
            } else if (selectedType === '1') { // Percentage
                discountValueDiv.style.display = 'block';
                maxDiscountDiv.style.display = 'block';
                discountValueInput.required = true;
                discountValueHelp.textContent = 'Nhập % giảm giá từ 0-100. VD: 10 (tương đương 10%)';
            } else if (selectedType === '2') { // FreeShipping
                discountValueDiv.style.display = 'none';
                maxDiscountDiv.style.display = 'none';
                discountValueInput.required = false;
                discountValueInput.value = '0';
            }
        });

        // Trigger on page load if editing
        document.getElementById('voucherType').dispatchEvent(new Event('change'));
    </script>
}
