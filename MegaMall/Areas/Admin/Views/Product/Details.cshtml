@model MegaMall.Domain.Entities.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-gray-800">Chi tiết sản phẩm</h1>
    <div>
        <a asp-area="Admin" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Chỉnh sửa
        </a>
        <a asp-area="Admin" asp-controller="Product" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-box-seam"></i> Thông tin sản phẩm</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên sản phẩm:</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
            
            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            
            <dt class="col-sm-3">Danh mục:</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Category?.Name</span></dd>
            
            <dt class="col-sm-3">Người bán:</dt>
            <dd class="col-sm-9">@Model.Seller?.UserName</dd>
            
            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">
                @if(Model.IsPublished)
                {
                    <span class="badge bg-success">Đã xuất bản</span>
                }
                else
                {
                    <span class="badge bg-warning">Chưa xuất bản</span>
                }
                
                @if(Model.IsDeleted)
                {
                    <span class="badge bg-danger ms-2">Đã xóa</span>
                }
            </dd>
            
            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>
