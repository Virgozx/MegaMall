@model MegaMall.Domain.Entities.ApplicationUser

@{
    ViewData["Title"] = "Chỉnh sửa người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-gray-800">Chỉnh sửa người dùng</h1>
    <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Thông tin người dùng</h6>
    </div>
    <div class="card-body">
        <form asp-area="Admin" asp-controller="User" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
            <input type="hidden" asp-for="Id" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="UserName" class="form-label fw-bold">Tên đăng nhập</label>
                        <input asp-for="UserName" class="form-control" readonly />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Email" class="form-label fw-bold">Email</label>
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="form-label fw-bold">Họ và tên</label>
                        <input asp-for="FullName" class="form-control" />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="PhoneNumber" class="form-label fw-bold">Số điện thoại</label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Address" class="form-label fw-bold">Địa chỉ</label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="City" class="form-label fw-bold">Thành phố</label>
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="ShopName" class="form-label fw-bold">Tên cửa hàng</label>
                        <input asp-for="ShopName" class="form-control" />
                        <span asp-validation-for="ShopName" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="LoyaltyPoints" class="form-label fw-bold">Điểm thưởng</label>
                        <input asp-for="LoyaltyPoints" class="form-control" type="number" />
                        <span asp-validation-for="LoyaltyPoints" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="form-group mb-3">
                <label asp-for="ShopDescription" class="form-label fw-bold">Mô tả cửa hàng</label>
                <textarea asp-for="ShopDescription" class="form-control" rows="3"></textarea>
                <span asp-validation-for="ShopDescription" class="text-danger"></span>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="IsSellerApproved" />
                <label class="form-check-label" asp-for="IsSellerApproved">
                    Duyệt làm người bán
                </label>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="EmailConfirmed" />
                <label class="form-check-label" asp-for="EmailConfirmed">
                    Email đã xác nhận
                </label>
            </div>
            
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" asp-for="LockoutEnabled" />
                <label class="form-check-label" asp-for="LockoutEnabled">
                    Cho phép khóa tài khoản
                </label>
            </div>
            
            <div class="mt-4">
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-save"></i> Lưu
                </button>
                <a asp-area="Admin" asp-controller="User" asp-action="Index" class="btn btn-secondary">
                    <i class="bi bi-x-circle"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
