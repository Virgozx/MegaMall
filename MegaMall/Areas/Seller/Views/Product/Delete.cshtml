@model MegaMall.Domain.Entities.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-gray-800">Xóa sản phẩm</h1>
    <a asp-area="Seller" asp-controller="Product" asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Quay lại
    </a>
</div>

<div class="card shadow mb-4 border-danger">
    <div class="card-header py-3 bg-danger text-white">
        <h6 class="m-0 font-weight-bold">
            <i class="bi bi-exclamation-triangle"></i> Xác nhận xóa sản phẩm
        </h6>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="bi bi-exclamation-circle"></i>
            <strong>Cảnh báo:</strong> Bạn có chắc chắn muốn xóa sản phẩm này không? Sản phẩm sẽ được đánh dấu là đã xóa và không còn hiển thị với khách hàng.
        </div>
        
        <dl class="row">
            <dt class="col-sm-3">Tên sản phẩm:</dt>
            <dd class="col-sm-9"><strong class="text-danger">@Model.Name</strong></dd>
            
            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            
            <dt class="col-sm-3">Danh mục:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-info">@Model.Category?.Name</span>
            </dd>
            
            <dt class="col-sm-3">Trạng thái hiện tại:</dt>
            <dd class="col-sm-9">
                @if(Model.IsPublished)
                {
                    <span class="badge bg-success">Đã xuất bản</span>
                }
                else
                {
                    <span class="badge bg-warning">Chưa xuất bản</span>
                }
            </dd>
            
            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>

            <dt class="col-sm-3">Số lượng biến thể:</dt>
            <dd class="col-sm-9">
                <span class="badge bg-secondary">@(Model.Variants?.Count ?? 0) biến thể</span>
            </dd>
        </dl>

        @if(Model.Images != null && Model.Images.Any())
        {
            <div class="mb-3">
                <strong>Hình ảnh sản phẩm:</strong>
                <div class="row mt-2">
                    @foreach(var image in Model.Images.Take(4))
                    {
                        <div class="col-md-3">
                            <img src="@image.ImageUrl" class="img-thumbnail" alt="Product Image" style="height: 120px; object-fit: cover; width: 100%;">
                        </div>
                    }
                </div>
            </div>
        }
        
        <form asp-area="Seller" asp-controller="Product" asp-action="Delete" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="mt-4 pt-3 border-top">
                <button type="submit" class="btn btn-danger btn-lg">
                    <i class="bi bi-trash"></i> Xác nhận xóa sản phẩm
                </button>
                <a asp-area="Seller" asp-controller="Product" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                    <i class="bi bi-eye"></i> Xem chi tiết
                </a>
                <a asp-area="Seller" asp-controller="Product" asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="bi bi-x-circle"></i> Hủy bỏ
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
