@model MegaMall.Domain.Entities.Product

@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Areas/Seller/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 text-gray-800">Chi tiết sản phẩm</h1>
    <div>
        <a asp-area="Seller" asp-controller="Product" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="bi bi-pencil"></i> Chỉnh sửa
        </a>
        <a asp-area="Seller" asp-controller="Product" asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Quay lại
        </a>
    </div>
</div>

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-box-seam"></i> Thông tin sản phẩm</h6>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Tên sản phẩm:</dt>
            <dd class="col-sm-9"><strong>@Model.Name</strong></dd>
            
            <dt class="col-sm-3">Mô tả:</dt>
            <dd class="col-sm-9">@Model.Description</dd>
            
            <dt class="col-sm-3">Danh mục:</dt>
            <dd class="col-sm-9"><span class="badge bg-info">@Model.Category?.Name</span></dd>
            
            <dt class="col-sm-3">Trạng thái:</dt>
            <dd class="col-sm-9">
                @if(Model.IsPublished)
                {
                    <span class="badge bg-success">Đã xuất bản</span>
                }
                else
                {
                    <span class="badge bg-warning">Chưa xuất bản</span>
                }
                
                @if(Model.IsDeleted)
                {
                    <span class="badge bg-danger ms-2">Đã xóa</span>
                }
            </dd>
            
            <dt class="col-sm-3">Ngày tạo:</dt>
            <dd class="col-sm-9">@Model.CreatedDate.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>

@if(Model.Images != null && Model.Images.Any())
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-images"></i> Hình ảnh sản phẩm</h6>
        </div>
        <div class="card-body">
            <div class="row">
                @foreach(var image in Model.Images)
                {
                    <div class="col-md-3 mb-3">
                        <div class="card">
                            <img src="@image.ImageUrl" class="card-img-top" alt="Product Image" style="height: 200px; object-fit: cover;">
                            <div class="card-body text-center">
                                @if(image.IsMain)
                                {
                                    <span class="badge bg-primary">Ảnh chính</span>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
}

@if(Model.Variants != null && Model.Variants.Any())
{
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary"><i class="bi bi-tags"></i> Biến thể sản phẩm</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>SKU</th>
                            <th>Giá gốc</th>
                            <th>Giá bán</th>
                            <th>Số lượng</th>
                            <th>Thuộc tính</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var variant in Model.Variants)
                        {
                            <tr>
                                <td><code>@variant.Sku</code></td>
                                <td>@string.Format("{0:N0}", variant.OriginalPrice) đ</td>
                                <td><strong class="text-success">@string.Format("{0:N0}", variant.Price) đ</strong></td>
                                <td>
                                    <span class="badge @(variant.StockQuantity > 10 ? "bg-success" : variant.StockQuantity > 0 ? "bg-warning" : "bg-danger")">
                                        @variant.StockQuantity
                                    </span>
                                </td>
                                <td><small>@variant.VariantPropertiesJson</small></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
